<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewProducts"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="فضلا ادخل بيانات الصنف"
        android:textColor="@color/LightSalmon4"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <ImageButton
        android:id="@+id/NewProducts_imgbtn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:src="@drawable/img1"
        android:scaleType="fitCenter"
        />

    <EditText
        android:id="@+id/NewProducts_Name"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:hint="ادخل اسم الصنف"
        android:background="@drawable/data_field_shape"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/NewProducts_price"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:hint="ادخل سعر الصنف"
        android:background="@drawable/data_field_shape"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:inputType="numberDecimal"
        />


    <EditText
        android:id="@+id/NewProducts_desc"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:hint="ادخل إيحاء الصنف"
        android:background="@drawable/data_field_shape"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:inputType="text"
        />



    <android.widget.Button
        android:id="@+id/NewProducts_BTN1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="اضافة"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/buttons_shape"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

</LinearLayout>